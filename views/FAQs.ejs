    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
        
        // Mobile menu toggle
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');
        
        hamburger.addEventListener('click', function() {
            this.classList.toggle('active');
            navLinks.classList.toggle('active');
        });
        
        // FAQ accordion functionality
        document.querySelectorAll('.quest').forEach(question => {
            const icon = question.querySelector('i');
            const answer = question.querySelector('p');
            
            // Click on question or icon
            question.querySelector('h3').addEventListener('click', function() {
                question.classList.toggle('active');
                answer.style.maxHeight = question.classList.contains('active') ? answer.scrollHeight + 'px' : '0';
                icon.style.transform = question.classList.contains('active') ? 'rotate(180deg)' : 'rotate(0)';
            });
            
            icon.addEventListener('click', function(e) {
                e.stopPropagation();
                question.classList.toggle('active');
                answer.style.maxHeight = question.classList.contains('active') ? answer.scrollHeight + 'px' : '0';
                this.style.transform = question.classList.contains('active') ? 'rotate(180deg)' : 'rotate(0)';
            });
            
            // Smooth animation for height changes
            answer.style.transition = 'max-height 0.3s ease, padding 0.3s ease';
        });

        // Animate FAQ items on scroll
        const animateOnScroll = function() {
            const questions = document.querySelectorAll('.quest');
            
            questions.forEach((question, index) => {
                const questionPosition = question.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.2;
                
                if (questionPosition < screenPosition) {
                    question.style.animation = `fadeInUp 0.5s ease ${index * 0.1}s both`;
                    question.style.opacity = 1;
                }
            });
        };
        
        window.addEventListener('scroll', animateOnScroll);
        window.addEventListener('load', animateOnScroll);
    </script>    
